                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
                <ul class="navbar-nav align-self-end" id="nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Administrator
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Kierowca" asp-action="Index">Kierowcy</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pojazd" asp-action="Index">Pojazdy</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Uzytkownik" asp-action="Index">Uzytkownicy</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="@Url.Action("Index", "Home")">Wyloguj</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Urzędnik
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Kierowca" asp-action="Index">Kierowcy</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pojazd" asp-action="Index">Pojazdy</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="@Url.Action("Index", "Home")">Wyloguj</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Policja
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Kierowca" asp-action="Index_policja">Kierowcy</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pojazd" asp-action="Index_policja">Pojazdy</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="@Url.Action("Index", "Home")">Wyloguj</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Petent
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pojazd" asp-action="Index_petent">Pojazdy</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="@Url.Action("Index", "Home")">Wyloguj</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<h2>
    Liczba uzytkownikow: @Model.Uzytkownicy.Count() <a class="btn btn-primary float-right" href="@Url.Action("Add")">Dodaj Uzytkownika</a>
</h2>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Rola</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Uzytkownik in Model.Uzytkownicy)
        {
            <tr>
                <td>@Uzytkownik.Rola</td>
                <td>
                    <button type="button" class="btn btn-sm btn-secondary btn-edit" data-id="@Uzytkownik.Id">Edytuj</button>
                    <button type="button" class="btn btn-sm btn-danger btn-delete" data-id="@Uzytkownik.Id">USUŃ</button>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts
{
    <script>
        $(document).ready(function () {
            $(".btn-edit").click((e) => {
                let id = e.target.dataset.id
                let url = "@Url.Action("Edit", "Uzytkownik", new { id = "__id__"})"
                url = url.replace("__id__", id)
                window.location.href = url
            });
            $(".btn-delete").click((e) => {
                let id = e.target.dataset.id;
                $.ajax({
                    url: "@Url.Action("Delete")",
                    method: 'POST',
                    data: {
                        id: id
                    }
                }).then(() => {
                    window.location.href = "@Url.Action("Index")"
                })
            });
        })
    </script>
}
