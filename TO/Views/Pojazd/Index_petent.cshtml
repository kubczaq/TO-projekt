    </br></br></br><h6>Wpisz numer VIN pojazdu aby wyszukać dane</a>.</h6></br></br></br>

    <div class="input-group">
        <div class="form-outline">
            <input type="search" id="form1" class="form-control" />
        </div>
        <button type="button" class="btn btn-primary btn-search">
            Wyszukaj
        </button>
    </div>


@section Scripts
{
    <script>
        $(document).ready(function () {
            $(".btn-search").click((e) => {
                let id = form1.value
                let url = "@Url.Action("Index_Petent_Wyszukaj", "Pojazd", new { vin = "__id__"})"
                url = url.replace("__id__", id)
                window.location.href = url
            });
        })
    </script>
}
