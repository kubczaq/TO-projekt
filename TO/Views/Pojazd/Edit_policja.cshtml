@model PojazdVM
@{
    ViewData["Title"] = "Edytuj pojazd";

}
<header>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
                <ul class="navbar-nav align-self-end" id="nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Policja
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Kierowca" asp-action="Index_policja">Kierowcy</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pojazd" asp-action="Index_policja">Pojazdy</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="@Url.Action("Index", "Home")">Wyloguj</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
@using (Html.BeginForm("Edit_policja", "Pojazd", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        <label>Typ pojazdu:</label>
        <select class="custom-select form-control" name="Typ" readonly>
            <option value="@PojazdVM.TypPojazduEnum.Osobowy">@(EnumHelper<PojazdVM.TypPojazduEnum>.GetDisplayValue(PojazdVM.TypPojazduEnum.Osobowy))</option>
            <option value="@PojazdVM.TypPojazduEnum.Ciezarowy">@(EnumHelper<PojazdVM.TypPojazduEnum>.GetDisplayValue(PojazdVM.TypPojazduEnum.Ciezarowy))</option>
            <option value="@PojazdVM.TypPojazduEnum.Motocykl">@(EnumHelper<PojazdVM.TypPojazduEnum>.GetDisplayValue(PojazdVM.TypPojazduEnum.Motocykl))</option>
            <option value="@PojazdVM.TypPojazduEnum.Autobus">@(EnumHelper<PojazdVM.TypPojazduEnum>.GetDisplayValue(PojazdVM.TypPojazduEnum.Autobus))</option>
        </select>
    </div>
    <div class="form-group">
        <label>Marka:</label>
        @Html.TextBoxFor(x => x.Marka, new { @readonly = true, @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Model:</label>
        @Html.TextBoxFor(x => x.Model, new { @readonly = true, @class = "form-control" })
    </div>
    <div class="form-group">
        <label>VIN:</label>
        @Html.TextBoxFor(x => x.Vin, new { @readonly = true, @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Data produkcji:</label>
        @Html.TextBoxFor(x => x.DataProdukcji, new { @readonly = true, @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Pojemność:</label>
        @Html.TextBoxFor(x => x.Pojemnosc, new { @readonly = true, @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Waga:</label>
        @Html.TextBoxFor(x => x.Waga, new { @readonly = true, @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Data rejestracji:</label>
        @Html.TextBoxFor(x => x.Rejestracja, new { @readonly = true, @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Własciciel:</label>
        @Html.TextBoxFor(x => x.Wlasciciel, new { @readonly = true, @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Ubezpieczenie:</label>
        @Html.TextBoxFor(x => x.Ubezpieczenie, new { @readonly = true, @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Badanie techniczne:</label>
        @Html.TextBoxFor(x => x.Badanie, new { @readonly = true, @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Zatrzymanie dowodu:</label>
        @Html.TextBoxFor(x => x.ZatrzymanieDowodu, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Utrata dowodu:</label>
        @Html.TextBoxFor(x => x.UtrataDowodu, new { @readonly = true, @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Kradzież:</label>
        @Html.TextBoxFor(x => x.Kradziez, new { @readonly = true, @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Uwagi:</label>
        @Html.TextBoxFor(x => x.Uwagi, new { @class = "form-control" })
    </div>
    <a class="btn btn-secondary float-right" href="@Url.Action("Index_policja")">Wróć</a>
    <button type="submit" class="btn btn-primary float-right">Edytuj</button>
    <br /><br />
}
